{
  "name": "@mile/shared",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:ts && npm run build:assets",
    "build:ts": "tsc -p tsconfig.json",
    "build:assets": "node ./scripts/copy-assets.cjs",
    "dev": "npm run build && tsc -p tsconfig.json --watch --preserveWatchOutput",
    "lint": "eslint src --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit -p tsconfig.json"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "zod": "^3.22.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.3.0"
  }
}
